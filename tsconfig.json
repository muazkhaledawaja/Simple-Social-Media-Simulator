{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
   
  },
  "include": [
    "src/**/*.ts",
    "db/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}